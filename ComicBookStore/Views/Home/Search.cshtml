@using ComicBookStore.Models
@model IEnumerable<ComicModel>
@{
    ViewBag.Title = "Search";
}

<h2>Search Results</h2>

<div class="row">
    @foreach (ComicModel c in Model)
    {
    <div class="col-md-12 ">
        <br />
        <img src="@c.Img" style="width:100px; height:auto; margin: 0 auto;"/>
        <span>@c.Title</span>
        <span>@c.Year</span>
        <span>
            <button>@Html.ActionLink("View More", "ComicDetails", "Home", new { id = c.Id }, new { @class = "btn" })</button>
        </span>
    </div>
    }
</div>